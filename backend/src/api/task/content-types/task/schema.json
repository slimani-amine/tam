{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "task",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "attachement": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "priority": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new request",
        "in progress",
        "to be tested",
        "completed"
      ],
      "default": "new request"
    },
    "flag": {
      "type": "enumeration",
      "enum": [
        "empty",
        "urgent",
        "normal",
        "high",
        "low"
      ],
      "default": "empty"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment"
    },
    "users_permissions_users": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "deadline": {
      "type": "date"
    }
  }
}
